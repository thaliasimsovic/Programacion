using namespace std;
void main()
{
	float b,h,a,p;
	cout<<"ingrese los triangulos a calcular: " <<endl;
	cin>> a;
	for(int i=0; i<a; i++)
	{ cout<< "ingrese la base y la altura: " <<endl;
	  cin>>b;
	  cin>>h;
	  p=(b*h)/2;
	  cout<< "el area es: " <<p;

	}
	getch();
}
