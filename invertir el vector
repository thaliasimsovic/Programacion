#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

double promedio (double a[], int tamano);
void cargar (double a[], int tamano);
void mostrar (double a[], int tamano);
void invertir (double a[], int tamano);
void invertir1 (double a[], int tamano);

void main()
{
	int N;
	double a[MAX];
	do{
		cout<<"Ingrese el numero de elementos maximo: ";
		cin >> N;
	}while((N<=0)||(N>100));
	cargar (a,N);
	mostrar (a,N);
	cout<<"El promedio es: "<< promedio(a,N)<<endl;
	invertir1 (a,N);
	getch();
}

double promedio (double a[], int tamano){
	double suma = 0;
	for (int i=0; i<tamano; i++)
		suma=suma+a[i];
	return suma/tamano;
}
void cargar (double a[], int tamano){
	for(int i=0; i<tamano; i++){
		cout<<"a["<<i<<"] ";
		cin>>a[i];
	}
}
void mostrar (double a[], int tamano){
	for(int i=0; i<tamano; i++)
		cout<<"a["<<i<<"] "<<a[i]<<endl;
}
void invertir (double a[], int tamano){
	double b[MAX];
	int k=tamano -1;
	for(int i=0; i<tamano; i++){ 
		b[i]=a[k];
		k--;
		cout<<"a-1["<<i<<"] "<<b[i]<<endl;
	}
}
void invertir1 (double a[], int tamano){
	double aux;
	for(int i=0;i<tamano/2;i++){
		aux=a[tamano-1-i];
		a[tamano-1-i]=a[i];
		a[i]=aux;
	}
	mostrar(a,tamano);
}
